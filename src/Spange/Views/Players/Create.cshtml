@model Spange.Models.Player

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Player Stats</h4>
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CurrentHp" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CurrentHp" class="form-control" />
                <span asp-validation-for="CurrentHp" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaxHp" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaxHp" class="form-control" />
                <span asp-validation-for="MaxHp" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Appeal" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Appeal" class="form-control" />
                <span asp-validation-for="Appeal" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Hunger" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Hunger" class="form-control" />
                <span asp-validation-for="Hunger" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NeedToSleep" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NeedToSleep" class="form-control" />
                <span asp-validation-for="NeedToSleep" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Spange" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Spange" class="form-control" />
                <span asp-validation-for="Spange" class="text-danger" />
            </div>
        </div>
